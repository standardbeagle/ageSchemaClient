{
  "name": "age-schema-client",
  "version": "0.1.0",
  "description": "A TypeScript library for Apache AGE graph databases with schema validation",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:publish": "rm -rf dist && vite build && tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:unit:watch": "vitest -c vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:integration:watch": "vitest -c vitest.integration.config.ts",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:connection": "vitest run -c vitest.connection.config.ts",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run build:publish"
  },
  "keywords": [
    "apache",
    "age",
    "graph",
    "database",
    "schema",
    "typescript"
  ],
  "author": "Beagle <beagle@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beagle/age-schema-client.git"
  },
  "homepage": "https://github.com/beagle/age-schema-client#readme",
  "bugs": {
    "url": "https://github.com/beagle/age-schema-client/issues"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.1",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^3.1.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "pg": "^8.15.6",
    "pg-pool": "^3.9.6"
  }
}
